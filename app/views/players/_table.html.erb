<table class="table-dark table table-striped rounded-2 overflow-hidden">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.player.game_id") %></th>
      <th><%= t("activerecord.attributes.player.name") %></th>
      <th><%= t("activerecord.attributes.player.country") %></th>
      <th><%= t("activerecord.attributes.player.external_points") %></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td>
        <%= player.game.name %>
      </td>
        <td>
          <%= link_to(player.name, player.external_url ,target: "_blank") %>
        </td>
      <td>
        <%= player.country %>
      </td>
      <td>
        <%= player.external_points %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @players %>