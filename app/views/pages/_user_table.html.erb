<table class="table table-dark table-striped rounded-2 overflow-hidden">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.username") %></th>
      <th><%= t("activerecord.attributes.user.highscore") %></th>
      <% if policy(:user).show? %>

    <th><%= t("views.tables.actions") %></th>
        <% end %>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td>
        <%= user.username %>
      </td>
      <td>
        <%= user.highscore %>
      </td>
      <% if policy(user).show? %>
        <td>
          <%= link_to(game_user_path(id: user.id, game: @game), class: 'text-opacity-75') do %>
            <%= bootstrap_icon("eye") %>
          <% end %>
        </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate users %>