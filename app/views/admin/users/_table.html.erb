<table class="table table-dark table-striped rounded-2 overflow-hidden">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.username") %></th>
      <th><%= t("activerecord.attributes.user.email") %></th>
      <th><%= t("views.tables.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td>
        <%= user.username %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= link_to(admin_user_path(user), class: 'text-opacity-75') do %>
        <%= bootstrap_icon("eye") %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate users %>