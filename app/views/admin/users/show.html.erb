<h2 class="mb-3"><%= t('.title') %></h2>

<table class="table table-primary w-50">
  <tr>
    <td class="fw-bold"><%= t('.email') %></td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td class="fw-bold"><%= t('.username') %></td>
    <td><%= @user.username %></td>
  </tr>
</table>

<h3><%= t('admin.users.show.participations') %></h3>

<table class="table table-dark w-50">
  <% @participations.each do |participation| %>
    <tr>
      <td><%= link_to participation.id, admin_participation_path(participation) %></td>
      <td>
      <td class="fw-bold"><%= t('.status') %></td>
      <td><%= participation.status %></td>
      </td>
      <td>
      <td class="fw-bold"><%= t('.score') %></td>
      <td><%= 0 %></td>
      </td>
    </tr>
    <tr>

    </tr>
    <tr>

    </tr>
  <% end %>
</table>