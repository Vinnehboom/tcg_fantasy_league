<table class="table table-dark table-striped rounded-2 overflow-hidden">
  <thead>
    <tr>
      <th>#</th>
      <% unless @game %>
        <th><%= t("activerecord.attributes.tournament.game_id") %></th>
      <% end %>
      <th><%= t("activerecord.attributes.tournament.name") %></th>
      <th><%= t("activerecord.attributes.tournament.country") %></th>
      <th><%= t("activerecord.attributes.tournament.format") %></th>
      <th><%= t("activerecord.attributes.tournament.starting_date") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tournaments.each_with_index do |tournament, index| %>
    <tr>
      <td>
        <%= index+1 %>
      </td>
      <% unless @game %>
        <td>
          <%= tournament.game.name %>

        </td>
      <% end %>

        <td>
          <%= link_to(tournament.name, tournament.external_url ,target: "_blank", class: 'text-opacity-75') %>
        </td>
      <td>
        <%= tournament.country %>
      </td>
      <td>
        <%= tournament.format %>
      </td>
      <td>
        <%= l(tournament.starting_date) %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tournaments %>